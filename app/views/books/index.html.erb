<%= render 'users/list', user: current_user, book: @book %>


<h1>Books</h1>
<% @books.each do |book| %>
 <div>
  <%= image_tag book.user.get_profile_image %>
  
  <p>Title</p>
  <%= link_to book_path(book.id) do %>
    <span><%= book.title %></span>
  <% end %>
  <p>Opinion</p>
    <span><%= book.body %></span>
 </div>
 
<% end %>