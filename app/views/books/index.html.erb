<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  
  <h4>Opinion</h4>
   <%= f.text_area :opinion %>
  <%= f.submit 'CreateBook' %>
<% end %>


<h1>Book detail</h1>
<% @books.each do |book| %>
 <div>
  <p>Title</p>
  <%= link_to book_path(book.id) do %>
    <span><%= book.title %></span>
  <% end %>
  <p>Opinion</p>
    <span><%= book.opinion %></span>
 </div>
 
<% end %>