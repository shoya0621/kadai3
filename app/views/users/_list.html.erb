  <div class ="col-md-3">
   <div class="row">
   <h2>User info</h2>
    <%= image_tag user.get_profile_image %>
   <table class="table">
    <tbody>
     <tr>
      <th scope="row">name</th>
      <td><%= user.name %></td>
     </tr> 
     <tr>
      <th scope="row">introduction</th>
      <td><%= user.introduction %></td>
     </tr>
    </tbody>
   </table>
   </div>
   
   <div class="row">
   <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
   <% end %>
   </div>
  
   <div class="row">
   <h2>New Book</h2>
    <%= form_with model: book do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
  
     <h4>Opinion</h4>
     <%= f.text_area :body %>
     <%= f.submit 'CreateBook', class: "btn btn-success" %>
    <% end %>
   </div>
  </div>
